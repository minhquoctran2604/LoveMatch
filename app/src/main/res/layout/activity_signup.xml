<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="#FFFFFF"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center">
	<ImageView
		android:layout_width="191dp"
		android:layout_height="130dp"
		android:layout_marginTop="10dp"
		android:src="@drawable/logo"
		android:textColor="@android:color/white"
		android:textSize="100dp" />
	<ScrollView
		android:id="@+id/ra9s69lu5706"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="@drawable/dangky4">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<LinearLayout

				android:id="@+id/rgqicxwlmo1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/dangky3"
				android:paddingVertical="1dp"
				android:layout_marginBottom="36dp"
				android:layout_marginHorizontal="50dp"
				android:orientation="vertical"
				android:clickable="true"
				android:focusable="true">
				<TextView
					android:id="@+id/rtwnbo36dwh"
					android:textColor="#3B394A"
					android:textSize="24sp"
					android:layout_marginBottom="16dp"
					android:layout_marginHorizontal="24dp"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:gravity="center"
					android:text="ĐĂNG KÝ"
				/>
				<LinearLayout
					android:id="@+id/rc4t2vwta98j"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:background="@drawable/dangky3"
					android:paddingVertical="16dp"
					android:paddingHorizontal="8dp"
					android:layout_marginBottom="16dp"
					android:layout_marginHorizontal="24dp"
					android:orientation="horizontal">
					<com.google.android.material.imageview.ShapeableImageView
						android:id="@+id/rqyf34xm2v7"

						android:layout_width="24dp"
						android:layout_height="24dp"
						android:layout_marginEnd="4dp"
						android:src="@drawable/ic_mail"

					/>
					<EditText
						android:id="@+id/email_input"
						android:hint="Email"
						android:inputType="textEmailAddress"
						android:background="@null"
						android:textColor="#717086"
						android:textSize="16sp"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:paddingVertical="2dp" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/rl1bgwdnh0br"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:background="@drawable/cr12bf6f6f8"
					android:paddingVertical="12dp"
					android:paddingHorizontal="8dp"
					android:layout_marginBottom="16dp"
					android:layout_marginHorizontal="24dp"
					android:orientation="horizontal">
					<com.google.android.material.imageview.ShapeableImageView
						android:id="@+id/r3pyug9zym38"
						android:layout_width="24dp"
						android:layout_height="24dp"
						android:layout_marginEnd="4dp"
						android:src="@drawable/ic_account_back"
					/>
					<EditText
						android:id="@+id/username_input"
						android:hint="Tài khoản"
						android:inputType="textPersonName"
						android:background="@null"
						android:textColor="#717086"
						android:textSize="16sp"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:paddingVertical="2dp" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/r4m3a3qu0omi"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:background="@drawable/cr12bf6f6f8"
					android:paddingVertical="19dp"
					android:paddingHorizontal="8dp"
					android:layout_marginBottom="16dp"
					android:layout_marginHorizontal="24dp"
					android:clickable="true"
					android:focusable="true"
					android:orientation="horizontal">
					<com.google.android.material.imageview.ShapeableImageView
						android:id="@+id/rm9akp0a2v5j"
						android:layout_width="24dp"
						android:layout_height="24dp"
						android:layout_marginEnd="4dp"
						android:src="@drawable/ic_password"

					/>
					<EditText
						android:id="@+id/password_input"
						android:hint="Mật khẩu"
						android:inputType="textPassword"
						android:background="@null"
						android:textColor="#717086"
						android:textSize="16sp"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:paddingVertical="2dp" />
					<com.google.android.material.imageview.ShapeableImageView
						android:id="@+id/ri6017z14kcj"
						app:shapeAppearanceOverlay="@style/cr12"
						android:layout_width="24dp"
						android:layout_height="24dp"
						android:src="@drawable/ic_matdong"
						android:scaleType="fitXY"
					/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/rdw5lp5ch7ym"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:background="@drawable/cr12bf6f6f8"
					android:paddingVertical="19dp"
					android:paddingHorizontal="8dp"
					android:layout_marginBottom="16dp"
					android:layout_marginHorizontal="24dp"
					android:clickable="true"
					android:focusable="true"
					android:orientation="horizontal">
					<com.google.android.material.imageview.ShapeableImageView
						android:id="@+id/rarmjyirruvi"
						app:shapeAppearanceOverlay="@style/cr12"
						android:layout_width="24dp"
						android:layout_height="24dp"
						android:layout_marginEnd="4dp"
						android:src="@drawable/ic_password"
						android:scaleType="fitXY"
					/>
					<EditText
						android:id="@+id/confirm_password_input"
						android:hint="Xác nhận mật khẩu"
						android:inputType="textPassword"
						android:background="@null"
						android:textColor="#717086"
						android:textSize="16sp"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:paddingVertical="2dp" />
					<com.google.android.material.imageview.ShapeableImageView
						android:id="@+id/rl6z37fatool"
						app:shapeAppearanceOverlay="@style/cr12"
						android:layout_width="24dp"
						android:layout_height="24dp"
						android:src="@drawable/ic_matdong"
						android:scaleType="fitXY"
					/>
				</LinearLayout>
				<!-- Thêm trường Nơi ở -->
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:background="@drawable/cr12bf6f6f8"
					android:paddingVertical="12dp"
					android:paddingHorizontal="8dp"
					android:layout_marginBottom="16dp"
					android:layout_marginHorizontal="24dp"
					android:orientation="horizontal">
					<EditText
						android:id="@+id/residence_input"
						android:hint="Nơi ở"
						android:inputType="text"
						android:background="@null"
						android:textColor="#717086"
						android:textSize="16sp"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:paddingVertical="2dp" />
				</LinearLayout>
				<!-- Thêm warning text -->
				<TextView
					android:id="@+id/warning_text"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textColor="#FF5722"
					android:textSize="14sp"
					android:visibility="gone"
					android:layout_marginBottom="8dp" />
				<!-- Nút đăng ký -->
				<Button
					android:id="@+id/sign_up_button"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="ĐĂNG KÝ"
					android:textColor="#FFFFFF"
					android:textSize="16sp"
					app:backgroundTint="@color/colorPink"
					android:layout_marginHorizontal="24dp"
					android:layout_marginBottom="16dp" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/rsg2bm5lvbzi"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:layout_marginBottom="155dp"
				android:orientation="vertical">
				<TextView
					android:id="@+id/r1gx798wd3dt"
					android:textColor="#717086"
					android:textSize="16sp"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="Đã có tài khoản? ĐĂNG NHẬP ngay."
				/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
